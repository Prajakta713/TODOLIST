pipeline {
    agent any

    environment {
        IMAGE_NAME = 'todo-app-image'
        CONTAINER_NAME = 'todo-app-container'
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning the repository...'
                // You can actually add 'git url: "https://github.com/Prajakta713/TODOLIST.git"' here in real use
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    docker.build(IMAGE_NAME)
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    echo 'Running Docker container...'
                    docker.image(IMAGE_NAME).run("-d --name ${CONTAINER_NAME} -p 5000:5000")
                }
            }
        }

        stage('Automated Testing') {
            steps {
                script {
                    echo 'Running automated tests...'
                    // Run your tests inside the running container
                    // This is an example: you can replace it with your test commands
                    sh "docker exec ${CONTAINER_NAME} pytest || docker exec ${CONTAINER_NAME} npm test"
                }
            }
        }

        stage('Stop and Remove Container') {
            steps {
                script {
                    echo 'Stopping and removing the container...'
                    sh "docker stop ${CONTAINER_NAME}"
                    sh "docker rm ${CONTAINER_NAME}"
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
            // Clean up even if something fails
            script {
                sh "docker rm -f ${CONTAINER_NAME} || true"
            }
        }
    }
}
